{
    "require": {
        "vlucas/phpdotenv": "^5.6.1",
        "monolog/monolog": "^3.8.1",
        "phpmailer/phpmailer": "^6.9.3",
        "composer/semver": "^3.4",
        "phpunit/phpunit": "^12.1",
        "symfony/serializer-pack": "^1.3",
        "symfony/serializer": "^7.2"
    },
    "require-dev": {
        "phpmd/phpmd" : "@stable"
    },
    "autoload": {
        "psr-4": {
            "Game\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Game\\Tests\\": "src/Tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "endroid/installer": true
        }
    }
}
